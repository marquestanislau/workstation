<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.layout.VBox?>

<BorderPane maxHeight="1.7976931348623157E308" prefHeight="449.0"
	prefWidth="718.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
	fx:controller="mz.co.sisgf.controller.BancoController">
	<center>
		<VBox maxWidth="1.7976931348623157E308" prefHeight="432.0"
			prefWidth="471.0" spacing="10.0">
			<children>
				<Label text="*Nome do Banco:" />
				<TextField fx:id="nome" />
				<GridPane hgap="10.0" prefHeight="107.0" prefWidth="459.0"
					vgap="2.0">
					<columnConstraints>
						<ColumnConstraints hgrow="SOMETIMES" minWidth="10.0"
							prefWidth="100.0" />
						<ColumnConstraints hgrow="SOMETIMES" minWidth="10.0"
							prefWidth="100.0" />
					</columnConstraints>
					<rowConstraints>
						<RowConstraints minHeight="10.0" prefHeight="30.0"
							vgrow="SOMETIMES" />
						<RowConstraints minHeight="10.0" prefHeight="30.0"
							vgrow="SOMETIMES" />
						<RowConstraints minHeight="10.0" prefHeight="30.0"
							vgrow="SOMETIMES" />
					</rowConstraints>
					<children>
						<Label text="Número da conta:" />
						<TextField fx:id="numero_conta" promptText="(Opcional)"
							GridPane.rowIndex="1" />
						<Label text="Saldo inicial" GridPane.columnIndex="1" />
						<TextField fx:id="fieldSaldoInicial"
							GridPane.columnIndex="1" GridPane.rowIndex="1" />
					</children>
				</GridPane>
				<Label text="Descrição:" />
				<TextArea fx:id="descricao" prefHeight="163.0" prefWidth="431.0"
					promptText="(Opcional)" />
				<Button fx:id="btnSalvar" mnemonicParsing="false" onAction="#salvar"
					styleClass="dark-blue" text="Criar" />
				<Label fx:id="labelMensagem" maxWidth="1.7976931348623157E308"
					styleClass="sucesso" />
			</children>
			<padding>
				<Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
			</padding>
		</VBox>
	</center>
	<right>
		<VBox prefHeight="393.0" prefWidth="219.0" spacing="10.0"
			styleClass="banco-left-panel" BorderPane.alignment="CENTER">
			<children>
				<Label text="Lista de Bancos Disponiveis" />
				<ListView fx:id="listView" prefHeight="200.0" prefWidth="200.0" />
				<Button fx:id="btnRemover" onAction="#apagar"
					mnemonicParsing="false" text="Remover">
					<styleClass>
						<String fx:value="dark-blue" />
						<String fx:value="red-button" />
					</styleClass>
				</Button>
			</children>
			<padding>
				<Insets bottom="20.0" left="20.0" right="20.0" top="30.0" />
			</padding>
		</VBox>
	</right>
</BorderPane>
